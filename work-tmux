DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $DIR

while getopts t: option
do
    case "${option}"
    in
        t) TIME=${OPTARG};;
    esac
done

work-tmux() {
    if [ -n "$TIME" ]
    then
        export gtdtime=$TIME
    else
        export gtdtime=25
    fi

    tmux new-session "tmux source-file tmux-session-config"

}

work-tmux
