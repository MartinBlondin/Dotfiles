colourscheme='molokai'
vimversion='vim74'

sudo chmod 777 /usr/share/vim/$vimversion/colors

rm ~/.vimrc
rm /usr/share/vim/$vimversion/colors/$colourscheme.vim
echo Deleted old files..

ln .vimrc ~/.vimrc
mv $colourscheme.vim /usr/share/vim/$vimversion/colors/$colourscheme.vim
sudo chmod 777 ~/.vimrc
echo Linked new files..

echo Installing Plugins...
git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
vim +PluginInstall +qall

echo Done! You can now use Vim.
